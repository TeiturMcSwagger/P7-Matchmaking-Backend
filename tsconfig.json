// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "emitDecoratorMetadata": true,
        "lib": [
            "es6"
        ],
        "types": [
            "reflect-metadata"
        ],
        "baseUrl": "./lib",
        "experimentalDecorators": true,
        "allowJs": true
    },
    "include": [
        "lib/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}